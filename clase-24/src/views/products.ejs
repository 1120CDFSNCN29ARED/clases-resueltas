<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('partials/head', {title: 'Todos los productos'}) %>

<body>
    <!-- Header -->
    <%- include('partials/headerNavbar') %>
    <!-- /Header -->

    <!-- todos los productos -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Todos los productos</h2>
            </div>

            <% for (let i = 0; i < products.length; i++) {
                const prod = products[i]; %>

            <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    <a href="/products/<%= prod.id %>">
                        <figure class="product-box_image">
                            <img src="/images/products/<%= prod.image %>" alt="imagen de producto">
                        </figure>
                        <article class="product-box_data">
                            <%if(prod.discount > 0) { %>
                            <h2>$ <%= toThousand(prod.price-(prod.price/prod.discount)) %></h2>
                            <span><%= prod.discount%> % OFF</span>
                            <% }else{ %>
                            <h2>$ <%= toThousand(prod.price) %></h2>
                            <%} %>
                            <p><%= prod.name %></p>
                            <i class="fas fa-truck"></i>
                        </article>
                    </a>
                </section>
            </div>

            <% } %>

        </div>
    </div>
    <!-- /todos los productos -->

    <!-- footer -->
    <%- include('partials/footer') %>
    <!-- /footer -->
</body>

</html>