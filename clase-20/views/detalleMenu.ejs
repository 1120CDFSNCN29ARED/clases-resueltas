<!DOCTYPE html>
<html>

<head>
    <%- include("./partials/head") %>
</head>

<body>
    <%- include("./partials/header") %>

    <!-- Page content -->
    <div class="ps-content">

        <!-- Menu Section -->
        <div class="ps-row ps-padding-64" id="menu">
            <div class="ps-col l6 ps-padding-large">
                <h1 class="ps-center"><%= dish.title %> </h1>
                <h4><%= dish.desc %></h4>
                <p class="ps-text-grey">
                    U$S <%= dish.price %>
                </p>
            </div>

            <div class="ps-col l6 ps-padding-large ps-img-menu">
                <img src="<%= dish.img %>" class="ps-round ps-image ps-opacity-min" alt="Menu" />
            </div>
        </div>

        <%- include("./partials/footer") %>
    </div>
</body>

</html>